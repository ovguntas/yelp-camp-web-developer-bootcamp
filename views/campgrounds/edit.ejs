<% layout( "/boilerplate/boilerplate" ) %>
    <div class="row mt-3 justify-content-center">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-md-8 ">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" class="validation-form"
                novalidate>
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" value="<%=campground.title%>" type=" text" id="title" name="title"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" value="<%=campground.location%>" type=" text" name="location"
                        id="location" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" value="<%=campground.image%>" type=" url" name="image" id="image"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" name="description" id="description"
                        rows="3"><%=campground.description%> required</textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Price </label>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="number" class="form-control" value="<%=campground.price%>" placeholder=" 0.00"
                            aria-label="price-label" aria-describedby="price-label" id="price" name="price" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>


                <div class="row justify-content-between">
                    <div class=" col-2">
                        <button class="btn btn-success mb-3">Update</button>
                    </div>
                    <div class="col-2">
                        <a class="btn btn-secondary mb-3" href="/campgrounds/<%=campground._id%>">Cancel</a>
                    </div>
                </div>
            </form>

        </div>
    </div>